@model T_Clientes


<div class="text-center">
    <h1>Bienvenido a PruebaSoft</h1>
    <div class="p-4 d-flex justify-content-center">
        <div class="col-md-6 text-left">
            <partial name="_Notify" />
            <form asp-action="AddCliente" method="post" ajax-link="true" ajax-success="clientSuceess">
                <div class="form-group">
                    <label asp-for="Cedula">Cédula de identidad <small class="text-success">permitido solo numeros</small></label>
                    <input asp-for="Cedula" class="form-control" placeholder="Ej: 00000000" />
                    <span class="text-danger" asp-validation-for="Cedula"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nombre">Nombre</label>
                    <input asp-for="Nombre" class="form-control"/>
                    <span class="text-danger" asp-validation-for="Nombre"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Verificar</button>
                </div>
            </form>
          

            <h1></h1>
        </div>
      

    </div>

</div>
